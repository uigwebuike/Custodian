<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/background720x1280"
				android:gravity="top" >

	<RelativeLayout

		android:id="@+id/relTop"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/top_bar">


		<ImageButton
			android:id="@+id/imageView1"
			android:layout_width="60dp"
			android:layout_height="50dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="2dp"
			android:layout_marginRight="10dp"
			android:background="@android:color/transparent"

			android:src="@drawable/btn_back" />



		<TextView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textAllCaps="true"
			android:textSize="@dimen/head_size"
			android:textColor="#fff"
			android:layout_toRightOf="@+id/title_text"
			android:text = "Get A Quote"

			/>

		<ImageButton
			android:id="@+id/home"
			android:layout_width="60dp"
			android:layout_height="50dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="1dp"
			android:background="@android:color/transparent"

			android:src="@drawable/icon_home" />
	</RelativeLayout>

	<ScrollView
		android:id="@+id/Heading1_scroll"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/Heading_Of_Tabs">
		<RelativeLayout
			android:id="@+id/Heading1_main"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" >
			<RelativeLayout
				android:id="@+id/Heading1"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				>


			</RelativeLayout>


		</RelativeLayout>
	</ScrollView>

	<TextView
		android:id="@+id/Heading_Of_Tabs"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"

		android:text="Payment"
		android:textColor="@android:color/white"
		android:gravity="center"

		android:background="@drawable/gray_bar"
		android:layout_below="@+id/relTop"
		android:layout_alignParentLeft="true"
		tools:ignore="HardcodedText"/>


	<ScrollView
		android:id="@+id/scrollview"
		android:layout_width="fill_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/Heading_Of_Tabs"
		android:layout_alignParentLeft="true">



	<GridLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_marginTop="5dp"
		tools:targetApi="ice_cream_sandwich">


		<TextView
			android:text="Bank Details"
			android:layout_width="match_parent"
			android:id="@+id/textView"
			android:layout_row="0"
			android:textColor="@android:color/background_dark"
			android:layout_column="0"
			android:gravity="center"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_row="2"
			android:layout_column="0"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp">

			<ImageView
				android:src="@drawable/img_ibtc"
				android:layout_width="100dp"
				android:layout_height="89dp"

				android:id="@+id/imageView2"
				android:layout_weight="1"/>

			<ImageView
				android:src="@drawable/img_uba"
				android:layout_width="100dp"
				android:layout_height="89dp"
				android:layout_row="2"
				android:layout_column="1"
				android:id="@+id/imageView3"
				android:layout_weight="1"/>
		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_row="3"
			android:layout_column="0"
			android:layout_marginBottom="5dp"
			android:layout_marginTop="5dp">

			<ImageView
				android:src="@drawable/img_firsbanklogo"
				android:layout_width="100dp"
				android:layout_height="89dp"

				android:id="@+id/imageView4"
				android:layout_weight="1"/>

			<ImageView
				android:src="@drawable/img_fidelitybank"
				android:layout_width="100dp"
				android:layout_height="89dp"
				android:layout_row="2"
				android:layout_column="1"
				android:id="@+id/imageView5"
				android:layout_weight="1"/>
		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_row="4"
			android:layout_column="0"
			android:layout_margin="5dp"
			android:layout_marginTop="5dp">

			<ImageView
				android:src="@drawable/img_gtbank"
				android:layout_width="100dp"
				android:layout_height="89dp"

				android:id="@+id/imageView6"
				android:layout_weight="1"/>

			<ImageView
				android:src="@drawable/img_skyebank"
				android:layout_width="100dp"
				android:layout_height="89dp"
				android:layout_row="2"
				android:layout_column="1"
				android:id="@+id/imageView7"
				android:layout_weight="1"/>
		</LinearLayout>


		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_row="5"
			android:layout_column="0"
			android:layout_margin="5dp"
			android:layout_marginTop="5dp">

			<ImageView
				android:src="@drawable/img_zenithbank"
				android:layout_width="100dp"
				android:layout_height="89dp"

				android:id="@+id/imageView8"
				android:layout_weight="1"/>

			<ImageView
				android:src="@android:drawable/status_bar_item_app_background"
				android:layout_width="100dp"
				android:layout_height="89dp"

				android:id="@+id/imageView9"
				android:layout_weight="1"/>
		</LinearLayout>



		<TextView
			android:text="Pay with Interswitch"
			android:layout_width="match_parent"
			android:id="@+id/textView10"
			android:layout_row="6"
			android:layout_column="0"
			android:textColor="@android:color/background_dark"
			android:gravity="center"/>

		<ImageView
			android:src="@drawable/img_interswitch"
			android:layout_width="match_parent"
			android:layout_height="89dp"
			android:layout_row="7"
			android:layout_column="0"
			android:id="@+id/imageView11"
			android:layout_weight="1"/>


		<TextView
			android:text="Pay with Paga"
			android:layout_width="match_parent"
			android:id="@+id/textView12"
			android:layout_row="8"
			android:layout_column="0"
			android:textColor="@android:color/background_dark"
			android:gravity="center"/>

		<ImageView
			android:src="@drawable/img_paga"
			android:layout_width="match_parent"
			android:layout_height="89dp"
			android:layout_row="9"
			android:layout_column="0"
			android:id="@+id/imageView13"
			android:layout_weight="1"/>


		<TextView
			android:text="Pay with Flutterwave"
			android:layout_width="match_parent"
			android:id="@+id/textView14"
			android:layout_row="10"
			android:layout_column="0"
			android:gravity="center"
			android:textColor="@android:color/background_dark"/>

		<ImageView
			android:src="@drawable/img_flutterwave"
			android:layout_width="match_parent"
			android:layout_height="89dp"
			android:layout_row="11"
			android:layout_column="0"
			android:id="@+id/imageView15"
			android:layout_weight="1"/>

	</GridLayout>

	</ScrollView>


</RelativeLayout>
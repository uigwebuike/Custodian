<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background720x1280"
    android:gravity="top" >
   
         <RelativeLayout
        
        android:id="@+id/relTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bar">
        
        
       <ImageButton
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
      	android:layout_marginLeft="2dp"
      	android:layout_marginRight="10dp"
      	android:background="@android:color/transparent"
      	
        android:src="@drawable/btn_back" />
        
     
          
           <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAllCaps="true"
        android:textSize="@dimen/head_size"
        android:textColor="#fff"
        android:layout_toRightOf="@+id/title_text"
        android:text = "REPORT A CLAIM"
        
        />

            <ImageButton
        android:id="@+id/home"
        android:layout_width="60dp"
        android:layout_height="50dp"
  		android:layout_alignParentRight="true"
  		android:layout_centerVertical="true"
      	android:layout_marginRight="1dp"
      	android:background="@android:color/transparent"
      	
        android:src="@drawable/icon_home" />
         </RelativeLayout>
        <ScrollView
        android:id="@+id/Heading1_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
         android:layout_below="@+id/relTop">
           <RelativeLayout 
                android:id="@+id/Heading1_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <RelativeLayout
        android:id="@+id/Heading1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
       >
           
         
         <TextView
        android:id="@+id/Heading_Of_Tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:text="WHEN DID THIS HAPPEN?"
        android:textColor="@android:color/white"
        android:gravity="center" 
        
        android:background="@drawable/gray_bar"/>
      	</RelativeLayout>
      	
        
        <RelativeLayout
        android:id="@+id/Heading2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/Heading1">
         
        <TextView
        android:id="@+id/txt_Report_Date_Of_incident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:textSize="@dimen/font_size"
		android:textColor="@android:color/black"
        android:paddingLeft="15dp"
        android:paddingTop="30dp" 
        
        
        android:text="Date of Incident" />
        <ImageView
        android:id="@+id/imag_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_Report_Date_Of_incident"
        android:layout_marginTop="30dp"
        android:src="@drawable/star_image" />
        <TextView
        android:id="@+id/edt_Report_Date_Of_incident"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_Report_Date_Of_incident"
        
       	android:layout_toRightOf="@+id/txt_Report_Date_Of_incident"
       	android:layout_marginLeft="40dp"
       android:layout_marginRight="20dp"
        android:ems="10"
        android:imeOptions="actionNext"
        	android:gravity="center_vertical"
		 	
		 	android:paddingLeft="10dp"
		 	android:textColor="@android:color/black"
        android:background="@drawable/text_field"
         />    
        
        <TextView
        android:id="@+id/txt_Report_Time_Of_incident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:textSize="@dimen/font_size"
		android:textColor="@android:color/black"
        android:paddingLeft="15dp"
        android:paddingTop="45dp" 
        android:layout_below="@+id/txt_Report_Date_Of_incident"
        
        android:text="Time of Incident" />   
        
        <ImageView
        android:id="@+id/imag_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_Report_Time_Of_incident"
        android:layout_marginTop="90dp"
        android:src="@drawable/star_image" />
        <TextView
		      android:id="@+id/spinner_time"
		      android:layout_width="fill_parent"
		    
		      android:layout_height="wrap_content"
		      android:layout_toRightOf="@+id/txt_Report_Time_Of_incident"
		    	android:layout_marginRight="20dp"
		      android:layout_marginTop="90dp"
		 	android:layout_marginLeft="36dp"
		      android:background="@drawable/drop_down" 
		      	android:gravity="center_vertical"
		 	
		 	android:paddingLeft="10dp"
		 	android:textColor="@android:color/black"/>

        <ImageButton
            android:id="@+id/calender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/edt_Report_Date_Of_incident"
            android:layout_alignTop="@+id/edt_Report_Date_Of_incident"
            
            android:layout_toStartOf="@+id/edt_Report_Date_Of_incident"
            android:background="@android:color/transparent"
           android:layout_marginRight="3dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/icon_calendar" />

        </RelativeLayout>

        <RelativeLayout
        android:id="@+id/Heading3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/Heading2"
        android:layout_marginTop="20dp"
        android:gravity="center">
         <TextView
        android:id="@+id/Heading_Of_Tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:text="WHERE DID THIS HAPPEN?"
        android:textColor="@android:color/white"
        android:gravity="center" 
        
        android:background="@drawable/gray_bar"/>
      	</RelativeLayout>
      	
		 <RelativeLayout
        android:id="@+id/Heading4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/Heading3"
        android:gravity="center"
       
        android:layout_marginTop="20dp">
        
		<TextView
        android:id="@+id/txt_report_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Address"
      android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
      
        
       />
		
		<ImageView
        android:id="@+id/imag_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_report_address"
        android:layout_marginTop="10dp"
        android:src="@drawable/star_image" />
		     <EditText
            android:id="@+id/edt_Report_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          	android:layout_toRightOf="@+id/txt_report_address"
      	
      		android:layout_marginTop="10dp"
           	android:layout_marginLeft="90dp"
            android:layout_marginRight="20dp"

            android:background="@drawable/text_field_large"
            android:ems="10" 

       android:gravity="left|top"
    
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:maxHeight="100dp"
    
              android:paddingLeft="10dp"
           
          
              android:paddingRight="10dp"
           
    
        >

            <requestFocus />
        </EditText>    
		     
		     <TextView
        android:id="@+id/txt_report_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_report_address"
        android:text="State"
         android:textColor="@android:color/black"
        android:paddingTop="135dp" 
        android:paddingLeft="15dp"
      
        
       />
		     <ImageView
        android:id="@+id/imag_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_report_state"
        android:layout_marginTop="160dp"
        android:src="@drawable/star_image" />

		  <TextView
		      android:id="@+id/spinner_title"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layout_toRightOf="@+id/txt_report_state"
		      android:layout_below="@+id/edt_Report_Address"
		      android:layout_marginTop="31dp"
		 	android:layout_marginLeft="110dp"
		 	android:layout_marginRight="20dp"
		 	android:gravity="center_vertical"
		 	
		 	android:paddingLeft="10dp"
		 	android:textColor="@android:color/black"
		      android:background="@drawable/drop_down" />
		  
		  
		      <TextView
        android:id="@+id/txt_report_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_report_state"
        android:text="City"
        	android:paddingLeft="20dp"
         android:textColor="@android:color/black"
        android:paddingTop="50dp" 
        
       
      
        
       />
<ImageView
        android:id="@+id/imag_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:layout_toRightOf="@+id/txt_report_city"
        android:layout_marginTop="220dp"
        android:src="@drawable/star_image" />
		  <TextView
		      android:id="@+id/spinner_city"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layout_toRightOf="@+id/txt_report_city"
		      android:layout_below="@+id/spinner_title"
		      android:layout_marginTop="31dp"
		 	android:layout_marginLeft="115dp"
		 	android:layout_marginRight="20dp"
		  	android:gravity="center_vertical"
		 	
		 	android:paddingLeft="10dp"
		 	android:textColor="@android:color/black"
		      android:background="@drawable/drop_down" />
		  	 <ImageView 
		       android:id="@+id/continue_imag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_city"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
       android:layout_marginBottom="20dp"
        android:src = "@drawable/btn_continue"
		      />
		 
		     </RelativeLayout>
         </RelativeLayout>
           </ScrollView>
	
		
      	</RelativeLayout>
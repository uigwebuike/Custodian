<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
     <TextView
        android:id="@+id/txt_invoice_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Invoice Date:" 
        android:textSize="16sp"/>

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/txt_invoice_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_invoice_date"
      	android:layout_toRightOf="@+id/txt_invoice_date"
        android:textStyle="bold"
        android:layout_marginLeft="65dp"
        android:text="" />

    <TextView
        android:id="@+id/txt_invoice"
        android:layout_below="@+id/txt_invoice_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Invoice Name:" 
        android:textSize="16sp"/>

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/txt_invoice_value"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_invoice"
      	android:layout_toRightOf="@+id/txt_invoice"
        android:textStyle="bold"
        android:layout_marginLeft="57dp"
        android:text="" />

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_invoice"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Amount:" 
        android:textColor="@android:color/black"
        android:textSize="16sp"/>
    
    <TextView
        android:id="@+id/txt_amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_amount"
      	android:layout_toRightOf="@+id/txt_amount"
        android:layout_marginLeft="100dp"
       	android:layout_below="@+id/txt_invoice_value"
        android:text=""
        android:textColor="@android:color/black"
        android:textStyle="bold" />
    
     <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_amount"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Due Date:" 
        android:textColor="@android:color/black"
        android:textSize="16sp"/>
     
     <TextView
        android:id="@+id/txt_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_date"
      	android:layout_toRightOf="@+id/txt_date"
        android:layout_marginLeft="90dp"
       	android:layout_below="@+id/txt_amount_value"
  		android:text = ""
        android:textColor="@android:color/black"
        android:textStyle="bold"/>
     
     
       <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     	android:layout_below="@+id/txt_date"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Status:" 
        android:textColor="@android:color/black"
        android:textSize="16sp"/>
     
     <TextView
        android:id="@+id/txt_status_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_status"
      	android:layout_toRightOf="@+id/txt_status"
        android:layout_marginLeft="110dp"
     	android:text ="" 
  		android:layout_below="@+id/txt_status_value"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>
      
      <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_status"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/black"
       
        android:textSize="16sp"/>
      
     
      
      
</RelativeLayout>

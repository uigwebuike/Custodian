  <RelativeLayout
      android:id="@+id/menu_layout"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:background="#99000000"
      android:gravity="center" >

      <ImageView
          android:id="@+id/bPhone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/icon_phone"
          android:textSize="12sp" />

      <ImageView
          android:id="@+id/bEmail"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignTop="@+id/bPhone"
          android:layout_marginLeft="40dp"
          android:layout_toRightOf="@+id/bPhone"
          android:background="@drawable/icon_email"
          android:textSize="12sp" />

      <ImageView
          android:id="@+id/bBranches"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="40dp"
          android:layout_toRightOf="@+id/bEmail"
          android:background="@drawable/icon_branches"
          android:textSize="12sp" />
  </RelativeLayout>

</RelativeLayout>

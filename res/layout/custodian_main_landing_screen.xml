<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background720x1280" >

    <RelativeLayout
        android:id="@+id/first_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/login_screen_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:src="@drawable/logo_login" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/landing_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/transparent_box" >

        <RelativeLayout
            android:id="@+id/landing_page_login_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/landing_page_login_layout_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
               android:background="@drawable/icon_login" />

            <TextView
                android:id="@+id/landing_page_login_layout_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/landing_page_login_layout_img"
                android:text="LOGIN"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/landing_page_login_layout_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/arrow" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/landing_page_login_layout_divider"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/landing_page_login_layout"
            android:layout_marginTop="5dp"
            android:background="@drawable/divider" />

        <RelativeLayout
            android:id="@+id/landing_page_buy_one_policy_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/landing_page_login_layout" >

            <ImageView
                android:id="@+id/landing_page_login_layout_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
    
                android:background="@drawable/icon_buy_policy" />

            <TextView
                android:id="@+id/landing_page_buy_layout_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
   				android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/landing_page_login_layout_img"
                android:text="BUY A POLICY"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/landing_page_login_layout_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/arrow" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/landing_page_buy_policy_layout_divider"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/landing_page_buy_one_policy_layout"
            android:layout_marginTop="5dp"
            android:background="@drawable/divider" />
        
          <RelativeLayout
            android:id="@+id/landing_page_about_policy_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/landing_page_buy_one_policy_layout" >

            <ImageView
                android:id="@+id/landing_page_about_layout_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
             
                android:background="@drawable/icon_about" />

            <TextView
                android:id="@+id/landing_page_about_layout_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
   			
   				android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/landing_page_about_layout_img"
                android:text="ABOUT CUSTODIAN"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/landing_page_about_layout_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/arrow" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/landing_page_about_layout_divider"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/landing_page_about_policy_layout"
            android:layout_marginTop="5dp"
            android:background="@drawable/divider" />
<RelativeLayout
            android:id="@+id/landing_page_contact_policy_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/landing_page_about_policy_layout" >

            <ImageView
                android:id="@+id/landing_page_contact_layout_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
               
                android:background="@drawable/icon_contact_us" />

            <TextView
                android:id="@+id/landing_page_contact_layout_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
   			android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/landing_page_contact_layout_img"
                android:text="CONTACT US"
                android:textColor="#000000"
                android:textSize="16sp" />

           <ImageView
                android:id="@+id/landing_page_contact_layout_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/arrow" />
        </RelativeLayout>
    </RelativeLayout>
    
    
    

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image"
    android:orientation="vertical" >
    
    <RelativeLayout
        
        android:id="@+id/relTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bar">
        
        
        
        <ImageButton
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
      	android:layout_marginLeft="2dp"
      	android:layout_marginRight="10dp"
      	android:background="@android:color/transparent"
        android:src="@drawable/btn_menu" />
        
         
          
           <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:layout_toRightOf="@+id/title_text"
        android:text = "MY INFO"
        android:textSize="@dimen/head_size"
        
        />
        
                     
        </RelativeLayout>

   
<RelativeLayout
    	android:id="@+id/txt_my_info_first_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user_details_info_area" 
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_below = "@+id/relTop"
       
        android:layout_marginRight="20dp">
        <ImageView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/user"
          
           android:layout_marginLeft="1.1dp"
           android:layout_marginTop="1.4dp"
            />
    <TextView
        android:id="@+id/txt_my_info_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_my_info_email"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
   		android:textSize="@dimen/font_size"
   android:textColor="@android:color/black"
        android:text="User Name :" />
      <TextView
        android:id="@+id/edt_my_info_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_my_info_username"
       	android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:paddingRight = "20dp"
        android:ems="10"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size"
        android:text=""/>
       
    
    <TextView
        android:id="@+id/txt_my_info_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_my_info_username"
       	android:layout_marginLeft="30dp"
       	android:layout_marginTop="15dp"
       	android:textSize="@dimen/font_size"
       	android:textColor="@android:color/black"
        android:text="Email :" />
    <TextView
        
        android:id="@+id/edt_my_info_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_my_info_email"
        android:layout_alignBottom="@+id/txt_my_info_email"
        android:layout_alignParentRight="true"
        android:paddingRight = "20dp"
        android:ems="10"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size"
         />
    
    <TextView
        android:id="@+id/txt_my_info_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_my_info_email"
       	android:layout_marginLeft="30dp"
       	android:layout_marginTop="15dp"
       	android:textSize="@dimen/font_size"
       	android:textColor="@android:color/black"
        android:text="First Name :" />
    <TextView
        
        android:id="@+id/edt_my_info_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_my_info_first_name"
        android:layout_alignBottom="@+id/txt_my_info_first_name"
        android:layout_alignParentRight="true"
        android:paddingRight = "20dp"
        android:ems="10"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size"
         />
    
     <TextView
        android:id="@+id/txt_my_info_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_my_info_first_name"
       	android:layout_marginLeft="30dp"
       	android:layout_marginTop="15dp"
       	android:textSize="@dimen/font_size"
       	android:textColor="@android:color/black"
        android:text="Last Name :" />
    <TextView
        
        android:id="@+id/edt_my_info_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_my_info_last_name"
        android:layout_alignBottom="@+id/txt_my_info_last_name"
        android:layout_alignParentRight="true"
        android:paddingRight = "20dp"
        android:ems="10"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size"
         />
     <TextView
        android:id="@+id/txt_my_info_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_my_info_last_name"
       	android:layout_marginLeft="30dp"
       	android:layout_marginTop="20dp"
       android:textSize="@dimen/font_size"
        android:text="Mobile :"
        android:textColor="@android:color/black"
        android:paddingBottom="20dp" />
    <TextView
        
        android:id="@+id/edt_my_info_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_my_info_mobile"
        android:layout_alignBottom="@+id/txt_my_info_mobile"
        android:layout_alignParentRight="true"
        android:paddingRight = "20dp"
        android:ems="10"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size"
         />
    
       
   
    
    </RelativeLayout>
    

<RelativeLayout
    	android:id="@+id/txt_my_info_second_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/address_info_area"
        android:layout_below="@+id/txt_my_info_first_layout" 
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
    
     <ImageView android:layout_height="32dp"
            android:layout_width="32dp"
            android:background="@drawable/address"
          	 android:layout_above="@+id/txt_my_info_second_layout"
          	 
           android:layout_marginLeft="1.6dp"
           android:layout_marginTop="1.5dp"
          
            />

<TextView
        android:id="@+id/txt_my_info_address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
   		android:textSize="@dimen/font_size"
   		android:textColor="@android:color/black"
        android:text="Address1 :" />
      <TextView
        android:id="@+id/edt_my_info_address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_my_info_address1"
       	android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:paddingRight = "20dp"
        android:ems="10"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:scrollbars = "vertical"
        android:textSize="@dimen/font_size"
        android:text=""/>
      
      <TextView
        android:id="@+id/txt_my_info_address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_marginLeft="30dp"
        android:textSize="@dimen/font_size"
        android:layout_marginTop="15dp"
   		android:layout_below="@+id/txt_my_info_address1"
   		android:textColor="@android:color/black"
        android:text="Address2 :" />
      <TextView
        android:id="@+id/edt_my_info_address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_my_info_address2"
       	android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:paddingRight = "20dp"
        android:ems="10"
        android:textColor="@android:color/black"
         android:maxLines="2"
        android:scrollbars = "vertical"
        android:textSize="@dimen/font_size"
        android:text=""/>
      
      <TextView
        android:id="@+id/txt_my_info_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_marginLeft="30dp"
        android:textSize="@dimen/font_size"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/black"
   		android:layout_below="@+id/txt_my_info_address2"
        android:text="State :" />
      <TextView
        android:id="@+id/edt_my_info_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_my_info_state"
       	android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:paddingRight = "20dp"
        android:ems="10"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size"/>
      
      <TextView
        android:id="@+id/txt_my_info_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_marginLeft="30dp"
        android:textSize="@dimen/font_size"
        android:layout_marginTop="15dp"
     android:textColor="@android:color/black"
   		android:layout_below="@+id/txt_my_info_state"
        android:text="City:" />
      <TextView
        android:id="@+id/edt_my_info_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_my_info_city"
       	android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:paddingRight = "20dp"
        android:ems="10"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size"/>
     
</RelativeLayout>
